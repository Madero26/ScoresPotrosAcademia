<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../../partials/head') %>
        <link rel="stylesheet" href="/resources/styles/styleStanding.css">
</head>

<body>
    <%- include('../../partials/navbar_public') %>

        <section class="st-wrap">
            <header class="st-head">
                <h1 class="st-title">Standing — <%= categoriaNombre %>
                </h1>
                <a class="st-link" href="/Standing?temporada=<%= idTemp %>">← Volver a categorías</a>
            </header>

            <div class="st-table-zone">
                <table class="st-table">
                    <thead>
                        <tr>
                            <th>Pos</th>
                            <th class="th-team">Equipo</th>
                            <th>W</th>
                            <th>L</th>
                            <th>T</th>
                            <th>GF</th>
                            <th>GC</th>
                            <th>+/-</th>
                            <th>PCT</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% tabla.forEach(row=> { %>
                            <tr
                                class="<%= row.rank===1 ? 'pos-1' : (row.rank===2 ? 'pos-2' : (row.rank===3 ? 'pos-3' : '')) %>">
                                <td>
                                    <span class="pos">
                                        <%= row.rank %>
                                    </span>
                                    <% if (row.empate) { %><span class="tie">EMPATE</span>
                                        <% } %>
                                </td>
                                <td class="td-team">
                                    <img src="/resources<%= row.url_foto %>" alt="" class="team-logo">
                                    <span>
                                        <%= row.equipo %>
                                    </span>
                                </td>
                                <td>
                                    <%= row.w %>
                                </td>
                                <td>
                                    <%= row.l %>
                                </td>
                                <td>
                                    <%= row.t %>
                                </td>
                                <td>
                                    <%= row.gf %>
                                </td>
                                <td>
                                    <%= row.gc %>
                                </td>
                                <td class="<%= row.dif > 0 ? 'good' : (row.dif < 0 ? 'bad':'' ) %>">
                                    <%= row.dif %>
                                </td>
                                <td>
                                    <%= (row.pct).toFixed(3) %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>

            </div>
        </section>
</body>

</html>