<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
  <link rel="stylesheet" href="/resources/styles/styleEstadisticas.css">
  <link rel="stylesheet" href="/resources/styles/stylePerfilJugador.css">
</head>

<body>
  <%- include('../partials/navbar') %>

  <%- include('../partials/footer') %>

  <section class="content03">
    <section class="perfil-jugador">
      <div class="jugador-info-box">
        <div class="jugador-foto-box">
          <img src="/<%= jugador.url_foto %>" alt="Foto del jugador" class="jugador-foto">
        </div>
        <div class="jugador-datos">
          <h2><%= jugador.nombres %> <%= jugador.apellido_paterno %> <%= jugador.apellido_materno %> (#<%= jugador.numero || '-' %>)</h2>
          <p class="posicion"><%= jugador.posicion %></p>
          <p><strong>Fecha de nacimiento:</strong> <%= jugador.fecha_nacimiento ? jugador.fecha_nacimiento.toLocaleDateString() : 'N/D' %></p>
          <p><strong>Ciudad:</strong> <%= jugador.ciudad || 'N/D' %></p>
          <p><strong>Categoría:</strong> <%= jugador.id_categoria %></p>
          <p><strong>Equipo:</strong> <%= jugador.equipo_nombre %></p>
        </div>
      </div>

      <div class="estadisticas-jugador">
        <h3>ESTADÍSTICAS DE BATEO</h3>
        <table>
          <thead>
            <tr>
              <th>Turnos</th><th>Hits</th><th>Sencillos</th><th>Dobles</th><th>Triples</th><th>Home Runs</th>
              <th>Bases Robadas</th><th>Bases x Bola</th><th>Carreras</th><th>Impulsadas</th><th>AVG</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= jugador.turnos || 0 %></td>
              <td><%= jugador.hits || 0 %></td>
              <td><%= jugador.sencillos || 0 %></td>
              <td><%= jugador.dobles || 0 %></td>
              <td><%= jugador.triples || 0 %></td>
              <td><%= jugador.homeruns || 0 %></td>
              <td><%= jugador.bases_robadas || 0 %></td>
              <td><%= jugador.bases_bola || 0 %></td>
              <td><%= jugador.carreras || 0 %></td>
              <td><%= jugador.carreras_impulsadas || 0 %></td>
              <td><%= jugador.promedio_bateo || "0.000" %></td>
            </tr>
          </tbody>
        </table>

        <h3>ESTADÍSTICAS DE PITCHEO</h3>
        <table>
          <thead>
            <tr>
              <th>Innings</th><th>BB</th><th>K</th><th>Victorias</th><th>Derrotas</th><th>Efectividad</th><th>%</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= jugador.innings || 0 %></td>
              <td><%= jugador.bb || 0 %></td>
              <td><%= jugador.ponches || 0 %></td>
              <td><%= jugador.victorias || 0 %></td>
              <td><%= jugador.derrotas || 0 %></td>
              <td><%= jugador.efectividad || "0.00" %></td>
              <td><%= jugador.porcentaje_ganados || "0%" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
  </section>
</body>
</html>

