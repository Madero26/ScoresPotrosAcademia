<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Academia ITSON</title>
    <link rel="stylesheet" href="/resources/styles/styleMain.css">
    <link rel="icon" href="/resources/imgs/academia-logo.png">
    <link rel="stylesheet" href="/resources/styles/styleEstadisticas.css">
    <link rel="stylesheet" href="/resources/styles/styleEstadisticasJugadores.css">
</head>

<body>
    
    <section class="content01"></section>
    <nav>
        <img src="/resources/imgs/potros.png" alt="POTROS ITSON">
        <div>
            <a href="/" class="link">INICIO</a>
        </div>
        <div>
            <a href="/Estadisticas" class="link">ESTADISTICAS</a>
        </div>
        <div>
            <a href="/JugadoresD" class="link">JUGADORES DESTACADOS</a>
        </div>
        <div>
            <a href="/Pagos" class="link">PAGOS</a>
        </div>
        <div>
            <a href="/Coord" class="link">COORDINADORES</a>
        </div>
        <div>
            <a href="/Standing" class="link">STANDING</a>
        </div>
        <img src="/resources/imgs/logo.png" alt="Logo">
    
    </nav>
    <script>
        // Agregar el evento a todos los enlaces con clase 'link'
        document.querySelectorAll('.link').forEach(function(link) {
            link.addEventListener('click', function(e) {
                e.preventDefault(); // Evita que el link se cargue inmediatamente
                const url = this.href; // Captura la URL del enlace

                // Añadir la clase fade-out para iniciar la animación de desvanecimiento
                document.body.classList.add('fade-out');

                // Esperar a que la animación de desvanecimiento termine (0.5s) y luego redirigir
                setTimeout(function() {
                    window.location.href = url; // Cambia a la nueva URL después de la animación
                }, 90); // Espera 500 ms para redirigir
            });
        });
    </script>
    <script src="resources/js/Animaciones.js"></script>
    <section class="content02"></section>
   <section class="content03">
  <h1 class="titulo-jugadores">ESTADISTICAS GENERALES</h1>

  <!-- Submenú mejorado -->
  <div class="submenu">
    <button class="tab-button active" onclick="toggleTab('bateo')">Estadísticas de Bateo</button>
    <button class="tab-button" onclick="toggleTab('pitcheo')">Estadísticas de Pitcheo</button>
  </div>

  <!-- Tabla de Bateo -->
  <div class="tab-content bateo-tab active">
    <h3 class="titulo-tabla">Estadísticas de Bateo</h3>
    <div class="tabla-container">
      <table class="tabla-estadisticas">
        <thead>
          <tr>
            <th>#</th><th>Nombre</th><th>Turnos</th><th>Hits</th><th>Sencillos</th><th>Dobles</th><th>Triples</th>
            <th>HR</th><th>Robadas</th><th>BB</th><th>Carreras</th><th>Impulsadas</th><th>AVG</th>
          </tr>
        </thead>
        <tbody>
          <% jugadores.forEach(j => { %>
            <tr>
              <td><%= j.numero || '-' %></td>
              <td><a href="/perfilJugador/<%= j.id_jugador %>"><%= j.nombres %> <%= j.apellido_paterno %> <%= j.apellido_materno %></a></td>
              <td><%= j.turnos || 0 %></td>
              <td><%= j.hits || 0 %></td>
              <td><%= j.sencillos || 0 %></td>
              <td><%= j.dobles || 0 %></td>
              <td><%= j.triples || 0 %></td>
              <td><%= j.homeruns || 0 %></td>
              <td><%= j.bases_robadas || 0 %></td>
              <td><%= j.bases_bola || 0 %></td>
              <td><%= j.carreras || 0 %></td>
              <td><%= j.carreras_impulsadas || 0 %></td>
              <td><%= j.promedio_bateo || "0.000" %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Tabla de Pitcheo -->
  <div class="tab-content pitcheo-tab">
    <h3 class="titulo-tabla">Estadísticas de Pitcheo</h3>
    <div class="tabla-container">
      <table class="tabla-estadisticas">
        <thead>
          <tr>
            <th>#</th><th>Nombre</th><th>Innings</th><th>BB</th><th>K</th><th>Victorias</th><th>Derrotas</th><th>Efectividad</th><th>%</th>
          </tr>
        </thead>
        <tbody>
          <% jugadores.forEach(j => { %>
            <tr>
              <td><%= j.numero || '-' %></td>
              <td><a href="/perfilJugador/<%= j.id_jugador %>"><%= j.nombres %> <%= j.apellido_paterno %> <%= j.apellido_materno %></a></td>
              <td><%= j.innings || 0 %></td>
              <td><%= j.bb || 0 %></td>
              <td><%= j.ponches || 0 %></td>
              <td><%= j.victorias || 0 %></td>
              <td><%= j.derrotas || 0 %></td>
              <td><%= j.efectividad || "0.00" %></td>
              <td><%= j.porcentaje_ganados || "0%" %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</section>

<script>
  function toggleTab(tab) {
    document.querySelectorAll('.tab-button').forEach(btn => {
      btn.classList.remove('active');
    });
    document.querySelectorAll('.tab-content').forEach(tab => {
      tab.classList.remove('active');
    });
    document.querySelector(`.tab-button[onclick*="${tab}"]`).classList.add('active');
    document.querySelectorAll(`.${tab}-tab`).forEach(tab => tab.classList.add('active'));
  }
</script>

        
        
</body>

</html>