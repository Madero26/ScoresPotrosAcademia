<!doctype html>
<html lang="es">
<head>
  <%- include('../../../partials/headAdmin') %>
  <link rel="stylesheet" href="/resources/styles/styleFormsAdmins.css">
</head>
<body>
  <%- include('../../../partials/navbar_adminCoordinador') %>

  <main class="container">
    <h1>Registrar rendimiento mensual</h1>

    <% if (sinAsignacion) { %>
      <div class="card">
        <p>Tu usuario no tiene temporada y categoría asignadas. Pide al administrador que configure tu acceso.</p>
      </div>
    <% } else { %>

    <div class="card">
      <form action="/adminCoordinador/rendimiento" method="POST" id="frmRend">
        <div class="form-grid">
          <div class="form-group">
            <label>Temporada</label>
            <input class="input" value="<%= temporada ? temporada.nombre : '' %>" disabled>
          </div>

          <div class="form-group">
            <label>Categoría</label>
            <input class="input" value="<%= categoria ? categoria.nombre : '' %>" disabled>
          </div>

          <div class="form-group">
            <label>Equipo</label>
            <select id="selEquipo" class="input">
              <option value="">Todos</option>
            </select>
          </div>

          <div class="form-group" style="grid-column:1/-1">
            <label>Jugador *</label>
            <select id="selJugador" name="id_jugador" class="input" required></select>
          </div>

          <div class="form-group">
            <label>Fecha de medición *</label>
            <input type="date" name="fecha_medicion" class="input" required>
          </div>

          <div class="form-group"><label>Tiempo carrera (s)</label>
            <input type="number" step="0.01" min="0" name="tiempo_carrera_seg" class="input" value="0.00">
          </div>
          <div class="form-group"><label>Vel. lanzamiento (mph)</label>
            <input type="number" step="0.01" min="0" name="vel_lanzamiento_mph" class="input" value="0.00">
          </div>
          <div class="form-group"><label>Potencia brazo (mph)</label>
            <input type="number" step="0.01" min="0" name="potencia_brazo_mph" class="input" value="0.00">
          </div>
          <div class="form-group"><label>Pop time (s)</label>
            <input type="number" step="0.01" min="0" name="pop_time_seg" class="input" value="0.00">
          </div>
          <div class="form-group"><label>Vel. bate (mph)</label>
            <input type="number" step="0.01" min="0" name="vel_bate_mph" class="input" value="0.00">
          </div>
        </div>

        <div class="form-actions">
          <button class="btn btn-primary" type="submit">Guardar</button>
          <a class="btn btn-outline" href="/adminCoordinador">Cancelar</a>
        </div>
      </form>
    </div>

    <% } %>
  </main>

<script>
(function(){
  if (<%= sinAsignacion ? 'true' : 'false' %>) return;

  const selEquipo  = document.getElementById('selEquipo');
  const selJugador = document.getElementById('selJugador');

  const GET = u => fetch(u,{headers:{'x-requested-with':'XMLHttpRequest'}}).then(r=>r.json());

  async function loadTeams(){
    selEquipo.innerHTML = '<option value="">Todos</option>';
    const teams = await GET('/adminCoordinador/rendimiento/equipos');
    teams.forEach(e=>{
      const o = document.createElement('option');
      o.value = e.id_equipo_temporada;
      o.textContent = e.nombre;
      selEquipo.appendChild(o);
    });
  }

  async function loadPlayers(){
    selJugador.innerHTML = '';
    const qs = new URLSearchParams();
    if (selEquipo.value) qs.set('id_equipo_temporada', selEquipo.value);
    const js = await GET('/adminCoordinador/rendimiento/jugadores?' + qs.toString());
    selJugador.innerHTML = js.map(j => `<option value="${j.id_jugador}">${j.nombre}</option>`).join('');
  }

  selEquipo.addEventListener('change', loadPlayers);

  (async function init(){
    await loadTeams();
    await loadPlayers();
  })();
})();
</script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<% if (typeof alert !== 'undefined' && alert) { %>
<script>
  Swal.fire({
    title:<%- JSON.stringify(alertTitle) %>, text:<%- JSON.stringify(alertMessage) %>,
    icon:<%- JSON.stringify(alertIcon) %>, showConfirmButton:<%- JSON.stringify(showConfirmButton) %>,
    timer:<%- (timer==null?'null':Number(timer)) %>
  }).then(()=>{ window.location=<%- JSON.stringify(ruta || '/adminCoordinador/CoordRegistrarRendimiento') %>; });
</script>
<% } %>
</body>
</html>
