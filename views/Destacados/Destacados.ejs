<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
<style>
  body {
    font-family: 'Roboto', sans-serif;
  }
</style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Academia ITSON</title>
    <link rel="stylesheet" href="/resources/styles/styleMain.css">
    <link rel="icon" href="/resources/imgs/academia-logo.png">
    <link rel="stylesheet" href="/resources/styles/styleDestacados.css">
</head>
<body>

    <section class="content01"></section>
    <nav>
        <img src="/resources/imgs/potros.png" alt="POTROS ITSON">
        <div>
            <a href="/" class="link">INICIO</a>
        </div>
        <div>
            <a href="/Estadisticas" class="link">ESTADISTICAS</a>
        </div>
        <div>
            <a href="/JugadoresD" class="link">JUGADORES DESTACADOS</a>
        </div>
        <div>
            <a href="/Pagos" class="link">PAGOS</a>
        </div>
        <div>
            <a href="/Coord" class="link">COORDINADORES</a>
        </div>
        <div>
            <a href="/Standing" class="link">STANDING</a>
        </div>
        <img src="/resources/imgs/logo.png" alt="Logo">
    
    </nav>
    <script>
        // Agregar el evento a todos los enlaces con clase 'link'
        document.querySelectorAll('.link').forEach(function(link) {
            link.addEventListener('click', function(e) {
                e.preventDefault(); // Evita que el link se cargue inmediatamente
                const url = this.href; // Captura la URL del enlace

                // A√±adir la clase fade-out para iniciar la animaci√≥n de desvanecimiento
                document.body.classList.add('fade-out');

                // Esperar a que la animaci√≥n de desvanecimiento termine (0.5s) y luego redirigir
                setTimeout(function() {
                    window.location.href = url; // Cambia a la nueva URL despu√©s de la animaci√≥n
                }, 90); // Espera 500 ms para redirigir
            });
        });
    </script>
    <script src="resources/js/Animaciones.js"></script>
    <section class="content02"></section>
     <section class="tabla-estadisticas">
  <h2><%= tituloEstadistica %>  <%= nombreCategoria %></h2>

  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Nombre del jugador</th>
        <th><%= tituloEstadistica %></th>
      </tr>
    </thead>
    <tbody>
      <% jugadoresPaginados.forEach((jugador, index) => { %>
        <% const ranking = (paginaActual - 1) * 20 + index + 1; %>
        <tr class="<%= ranking === 1 ? 'mvp-row' : '' %>">
          <td><%= ranking %></td>
          <td class="<%= ranking === 1 ? 'mvp-text' : (ranking <= 3 ? 'top3-text' : '') %>">
            <%= jugador.nombre %>
            <% if (ranking === 1) { %>
              <span class="emoji-fire">üî•</span>
            <% } %>
          </td>
          <td><%= jugador.valor %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="paginacion">
    <% for (let i = 1; i <= totalPaginas; i++) { %>
      <a href="/categoria/<%= categoriaID %>/estadisticas/<%= tipo %>?pagina=<%= i %>"
         class="<%= i === paginaActual ? 'activo' : '' %>"><%= i %></a>
    <% } %>
  </div>
</section>





    
</body>
</html>