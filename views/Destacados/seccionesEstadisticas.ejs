<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
<style>
  body {
    font-family: 'Roboto', sans-serif;
  }
</style>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/resources/styles/styleSecciones.css">
</head>
<body>

    <%- include('../partials/navbar') %>
    <%- include('../partials/footer') %>
    <section class="estadisticas-ninas">
  <h2>📊 Estadísticas de la categoría <%= categoriaNombre %></h2>

  <!-- Submenú para filtros -->
  <div class="submenu-estadisticas">
    <button class="filtro-btn activo" onclick="mostrarSeccion('bateo')">Estadísticas de Bateo</button>
    <button class="filtro-btn" onclick="mostrarSeccion('pitcheo')">Estadísticas de Pitcheo</button>
  </div>

  <!-- Sección Bateo -->
  <div class="tarjetas-grid" id="seccion-bateo">
    <% const bateo = [
      { icon: '📈', label: 'Promedio de bateo', ruta: 'promedio' },
      { icon: '🥎', label: 'Sencillos', ruta: 'sencillos' },
      { icon: '⚾️⚾️', label: 'Dobles', ruta: 'dobles' },
      { icon: '3️⃣', label: 'Triples', ruta: 'triples' },
      { icon: '💥', label: 'Home Runs', ruta: 'homeruns' },
      { icon: '🏃‍♂️💨', label: 'Bases Robadas', ruta: 'basesrobadas' }
    ]; %>

    <% bateo.forEach(s => { %>
      <a href="/categoria/<%= categoriaID %>/estadisticas/<%= s.ruta %>" class="tarjeta-estadistica">
        <div class="emoji-tarjeta"><%= s.icon %></div>
        <div class="titulo-tarjeta"><%= s.label %></div>
        <div class="clic-aqui">👉 Haz clic aquí 👈</div>
      </a>
    <% }) %>
  </div>

  <!-- Sección Pitcheo -->
  <div class="tarjetas-grid oculto" id="seccion-pitcheo">
    <% const pitcheo = [
      { icon: '🎯', label: 'Efectividad', ruta: 'efectividad' },
      { icon: '🏆', label: 'Victorias', ruta: 'victorias' },
      { icon: '🔥', label: 'Ponches', ruta: 'ponches' }
    ]; %>

    <% pitcheo.forEach(s => { %>
      <a href="/categoria/<%= categoriaID %>/estadisticas/<%= s.ruta %>" class="tarjeta-estadistica">
        <div class="emoji-tarjeta"><%= s.icon %></div>
        <div class="titulo-tarjeta"><%= s.label %></div>
        <div class="clic-aqui">👉 Haz clic aquí 👈</div>
      </a>
    <% }) %>
  </div>
</section>

<script>
  function mostrarSeccion(tipo) {
    const secciones = ['bateo', 'pitcheo'];
    secciones.forEach(s => {
      document.getElementById('seccion-' + s).classList.add('oculto');
      document.querySelector(`.filtro-btn[onclick*="${s}"]`).classList.remove('activo');
    });
    document.getElementById('seccion-' + tipo).classList.remove('oculto');
    document.querySelector(`.filtro-btn[onclick*="${tipo}"]`).classList.add('activo');
  }
</script>




    
</body>
</html>