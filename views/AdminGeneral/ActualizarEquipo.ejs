<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Academia ITSON</title>
        <link rel="stylesheet" href="resources/styles/styleForms.css">

        
        <link rel="icon" href="resources/imgs/academia-logo.png">
    </head>
<body>
    <section class="content03">
        
        <div class="cardContra">
            <h1 class="fotos">ACTUALIZAR EQUIPO</h1>
        </div>
    </section>

    <section class="login-body">
        <div class="login-container">
            <form action="/actualizarEquipo/<%= equipos.id_equipo %>" method="POST" enctype="multipart/form-data">
                <label for="categoria">Selecciona la Categoría:</label>
                <select name="categoriaID">
                    <% categorias.forEach(categoria => { %>
                        <option value="<%= categoria.id_categoria %>"> <%= categoria.nombre_categoria %> </option>
                        <% }); %>
                </select>
            
                <label for="name">Escriba el nombre del equipo:</label>
                <input name="nombre" type="text" value="<%= equipos.nombre %>" placeholder="Potrillos, Broncos, etc" required>
            
                <label for="color">Escriba el color representativo:</label>
                <input name="color" type="text" value="<%= equipos.colores %>" placeholder="Rojo, Verde, Amarillo, etc" required>
            
                <label for="couch">Seleccione el Manager para este equipo:</label>
                <select name="couch" id="couch" required>
                    <% entrenadores.forEach(entrenador => { %>
                        <option value="<%= entrenador.id_entrenador %>">  <%= entrenador.nombres %> </option>
                        <% }); %>
                </select>
            
                <label for="fotoEquipo">Subir Foto del Equipo:</label>
                <input type="file" name="fotoEquipo" id="fotoEquipo" accept="image/*">
            
                <input type="submit" value="Actualizar Equipo" onclick="return confirm('¿Estás seguro de que deseas actualizar este equipo?');">
            </form>
            
          </div>
    </section>
    <div class="regresar">
    <a href="/formActualizarEquipo"><img src="resources/imgs/flecha.png" alt="Flecha de regreso"></a>
</div>
    
</body>
</html>