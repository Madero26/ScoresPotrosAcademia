<!-- views/AdminGeneral/ActualizarConfirmacionEntrenador.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Academia ITSON</title>
  <link rel="stylesheet" href="/resources/styles/styleMain.css">
  <link rel="stylesheet" href="/resources/styles/stylePago.css">
  <link rel="icon" href="/resources/imgs/academia-logo.png">
</head>
<body class="admin-bg">
  <% var isDelete = (typeof isDelete !== 'undefined') ? isDelete : false; %>

  <section class="content03">
    <div class="badge-title">
      <p><%= isDelete ? 'ELIMINAR ENTRENADOR' : 'FORMULARIO PARA ACTUALIZAR DATOS ENTRENADOR' %></p>
    </div>
  </section>

  <section class="login-body">
    <div class="login-container form-card">
      <form id="formActualizar"
            action="<%= isDelete ? ('/eliminarEntrenador/' + entrenador.id_entrenador)
                                 : ('/actualizarEntrenador/' + entrenador.id_entrenador) %>"
            method="POST">

        <div class="field">
          <label>Nombres:</label>
          <input type="text" name="nombres"
                 value="<%= entrenador.nombres %>"
                 <%= isDelete ? 'readonly class="readonly"' : 'required' %>>
        </div>

        <div class="field">
          <label>Apellido Paterno:</label>
          <input type="text" name="apellidoPaterno"
                 value="<%= entrenador.apellido_paterno %>"
                 <%= isDelete ? 'readonly class="readonly"' : 'required' %>>
        </div>

        <div class="field">
          <label>Apellido Materno:</label>
          <input type="text" name="apellidoMaterno"
                 value="<%= entrenador.apellido_materno %>"
                 <%= isDelete ? 'readonly class="readonly"' : 'required' %>>
        </div>

        <div class="field">
          <label>Categoría:</label>
          <select name="categoria" <%= isDelete ? 'disabled class="readonly"' : 'required' %>>
            <% categorias.forEach(c => { %>
              <option value="<%= c.id_categoria %>"
                <%= c.id_categoria===entrenador.id_categoria ? 'selected':'' %>>
                <%= c.nombre_categoria %>
              </option>
            <% }) %>
          </select>
        </div>

        <div class="actions">
          <button type="submit" class="<%= isDelete ? 'btn-danger' : '' %>">
            <%= isDelete ? 'Eliminar' : 'Actualizar' %>
          </button>
          <a class="back-cta" href="<%= isDelete ? '/formEliminarEntrenador' : '/formActualizarEntrenador' %>">
            ⟵ Volver a selección
          </a>
        </div>
      </form>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    const form = document.getElementById('formActualizar');
    const isDelete = <%= JSON.stringify(isDelete) %>;
    form.addEventListener('submit', function(e){
      e.preventDefault();
      Swal.fire({
        title: isDelete ? '¿Eliminar entrenador?' : '¿Actualizar entrenador?',
        text: isDelete ? 'Esta acción no se puede deshacer.'
                       : 'Se guardarán los cambios de «<%= entrenador.nombres %>».',
        icon: isDelete ? 'warning' : 'question',
        showCancelButton: true,
        confirmButtonText: isDelete ? 'Sí, eliminar' : 'Sí, actualizar',
        cancelButtonText: 'Cancelar',
        reverseButtons: true,
        focusCancel: true
      }).then(r=>{
        if(r.isConfirmed){
          Swal.fire({title: (isDelete?'Eliminando…':'Actualizando…'),
                     allowOutsideClick:false, allowEscapeKey:false,
                     didOpen:()=>Swal.showLoading()});
          form.submit();
        }
      });
    });
  </script>
</body>
</html>

