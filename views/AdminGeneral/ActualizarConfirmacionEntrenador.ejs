<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Academia ITSON</title>
  <link rel="stylesheet" href="/resources/styles/styleMain.css">
  <link rel="stylesheet" href="/resources/styles/stylePago.css">
  <link rel="icon" href="/resources/imgs/academia-logo.png">
</head>
<body class="admin-bg">
  <section class="content03">
    <div class="badge-title"><p>FORMULARIO PARA ACTUALIZAR DATOS ENTRENADOR</p></div>
  </section>

  <section class="login-body">
    <div class="login-container form-card">
      <form id="formActualizar" action="/actualizarEntrenador/<%= entrenador.id_entrenador %>" method="POST">
        <div class="field">
          <label>Nombres:</label>
          <input type="text" name="nombres" value="<%= entrenador.nombres %>" required>
        </div>
        <div class="field">
          <label>Apellido Paterno:</label>
          <input type="text" name="apellidoPaterno" value="<%= entrenador.apellido_paterno %>" required>
        </div>
        <div class="field">
          <label>Apellido Materno:</label>
          <input type="text" name="apellidoMaterno" value="<%= entrenador.apellido_materno %>" required>
        </div>
        <div class="field">
          <label>Categoría:</label>
          <select name="categoria" required>
            <% categorias.forEach(c => { %>
              <option value="<%= c.id_categoria %>" <%= c.id_categoria===entrenador.id_categoria ? 'selected':'' %>>
                <%= c.nombre_categoria %>
              </option>
            <% }) %>
          </select>
        </div>

        <div class="actions">
          <button type="submit">Actualizar</button>
          <a class="back-cta" href="/formActualizarEntrenador">⟵ Volver a selección</a>
        </div>
      </form>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    const form = document.getElementById('formActualizar');
    form.addEventListener('submit', function(e){
      e.preventDefault();
      Swal.fire({
        title:'¿Actualizar entrenador?',
        text:'Se guardarán los cambios de «<%= entrenador.nombres %>».',
        icon:'question',
        showCancelButton:true,
        confirmButtonText:'Sí, actualizar',
        cancelButtonText:'Cancelar',
        reverseButtons:true,
        focusCancel:true
      }).then(r=>{
        if(r.isConfirmed){
          Swal.fire({title:'Actualizando…', allowOutsideClick:false, allowEscapeKey:false, didOpen:()=>Swal.showLoading()});
          form.submit();
        }
      });
    });
  </script>
</body>
</html>
