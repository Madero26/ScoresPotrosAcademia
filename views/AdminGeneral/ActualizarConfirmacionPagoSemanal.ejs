<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Academia ITSON</title>
        <link rel="stylesheet" href="resources/styles/styleForms.css">

        <link rel="icon" href="resources/imgs/academia-logo.png">
    </head>
<body>
    <section class="content03">
        
        <div class="cardContra">
            <h1 class="fotos">ACTUALIZAR PAGO SEMANAL</h1>
        </div>
    </section>

    <section class="login-body">
        <div class="login-container">
            <form action="/actualizaPagoSemanalNuevo" method="GET">
                <select name="semana">
                    <% pagos.forEach(semana => { %>
                        <option value="<%= semana.id %>"> <%= semana.numero_semana %> </option>
                        <% }); %>
                </select>
                <input type="submit" name="eliminar" value="Elimnar">
            </form>
          </div>
    </section>
    <div class="regresar">
    <a href="/formActualizarPagoSemanal"><img src="resources/imgs/flecha.png" alt="Flecha de regreso"></a>
</div>
    
</body>
</html>