<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Academia ITSON</title>
  <link rel="stylesheet" href="/resources/styles/styleMain.css">
  <link rel="stylesheet" href="/resources/styles/stylePago.css">
  <link rel="icon" href="/resources/imgs/academia-logo.png">
</head>
<body class="admin-bg">
  <section class="content03">
    <div class="badge-title"><p>ACTUALIZAR JUGADOR</p></div>
  </section>

  <section class="login-body">
    <div class="login-container form-card">
      <form id="formActualizar" action="/actualizarJugador/<%= jugador.id_jugador %>" method="POST" enctype="multipart/form-data">
        <div class="field">
          <label>Nombres:</label>
          <input type="text" name="nombres" value="<%= jugador.nombres %>" required>
        </div>
        <div class="field">
          <label>Apellido paterno:</label>
          <input type="text" name="apellidoPaterno" value="<%= jugador.apellido_paterno %>" required>
        </div>
        <div class="field">
          <label>Apellido materno:</label>
          <input type="text" name="apellidoMaterno" value="<%= jugador.apellido_materno %>" required>
        </div>
        <div class="field">
          <label>Fecha de nacimiento:</label>
          <input type="date" name="fechaNacimiento" value="<%= (new Date(jugador.fecha_nacimiento)).toISOString().slice(0,10) %>">
        </div>

        <div class="grid-2">
          <div class="field">
            <label>Categoría:</label>
            <select id="catEdit" name="categoria" required>
              <% categorias.forEach(c=>{ %>
                <option value="<%= c.id_categoria %>" <%= c.id_categoria===jugador.id_categoria ? 'selected':'' %>><%= c.nombre_categoria %></option>
              <% }) %>
            </select>
          </div>
          <div class="field">
            <label>Equipo:</label>
            <select id="teamEdit" name="equipo" required>
              <% equipos.forEach(eq=>{ %>
                <option value="<%= eq.id_equipo %>" <%= eq.id_equipo===jugador.id_equipo ? 'selected':'' %>><%= eq.nombre %></option>
              <% }) %>
            </select>
          </div>
        </div>

        <div class="field">
          <label>Foto actual:</label><br>
          <img class="preview" src="/<%= jugador.url_foto %>" alt="Foto del jugador" style="max-width:220px">
        </div>
        <div class="field">
          <label>Subir nueva foto (opcional):</label>
          <input type="file" name="fotoJugador" accept="image/*">
        </div>

        <div class="actions">
          <button type="submit">Actualizar</button>
          <a class="back-cta" href="/formActualizarJugador">⟵ Volver a selección</a>
        </div>
      </form>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    // Confirmación antes de enviar
    const form = document.getElementById('formActualizar');
    form.addEventListener('submit', function(e){
      e.preventDefault();
      Swal.fire({
        title:'¿Actualizar jugador?',
        text:'Se guardarán los cambios de «<%= jugador.nombres %>».',
        icon:'question',
        showCancelButton:true,
        confirmButtonText:'Sí, actualizar',
        cancelButtonText:'Cancelar',
        reverseButtons:true,
        focusCancel:true
      }).then(r=>{
        if(r.isConfirmed){
          Swal.fire({title:'Actualizando…', allowOutsideClick:false, allowEscapeKey:false, didOpen:()=>Swal.showLoading()});
          form.submit();
        }
      });
    });

    // Si cambian la categoría en edición, recargo equipos de esa categoría
    const catEdit = document.getElementById('catEdit');
    const teamEdit = document.getElementById('teamEdit');
    catEdit.addEventListener('change', async (e)=>{
      teamEdit.innerHTML = '<option value="">Cargando…</option>';
      teamEdit.disabled = true;
      try{
        const r = await fetch(`/api/equipos?categoriaID=${encodeURIComponent(e.target.value)}`, {credentials:'same-origin'});
        const js = await r.json();
        if(!js.ok || !js.data.length){
          teamEdit.innerHTML = '<option value="">— Sin equipos —</option>';
          return;
        }
        teamEdit.innerHTML = js.data.map(eq => `<option value="${eq.id_equipo}">${eq.nombre}</option>`).join('');
        teamEdit.disabled = false;
      }catch(err){
        console.error(err);
        teamEdit.innerHTML = '<option value="">— Error —</option>';
      }
    });
  </script>
</body>
</html>
