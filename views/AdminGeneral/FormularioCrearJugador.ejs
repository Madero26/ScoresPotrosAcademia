<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Academia ITSON</title>
    <link rel="stylesheet" href="resources/styles/styleForms.css">
    <link rel="icon" href="resources/imgs/academia-logo.png">
</head>

<body>
    <%- include('../partials/adminNav', { usuario }) %>
    <h1 class="fotos">FORMULARIO CREAR JUGADOR</h1>
    <form action="/crearJugador" method="POST" enctype="multipart/form-data">
        <label for="name">Nombre Completo Del Jugador:</label>
        <input type="text" name="nombres" placeholder="Nombres" required>
        <input type="text" name="apellidoPaterno" placeholder="Apellido Paterno" required>
        <input type="text" name="apellidoMaterno" placeholder="Apellido Materno" required>
        <label for="date">Fecha De Nacimiento:</label>
        <input type="date" name="fechaNacimiento" required>
        <label for="categoria">Selecciona La Categor√≠a:</label>
        <select name="categoria" id="categoria" required>
            <% categorias.forEach(categoria=> { %>
                <option value="<%= categoria.id_categoria %>">
                    <%= categoria.nombre_categoria %>
                </option>
                <% }); %>
        </select>

        <select name="equipo" id="equipo">
            <option value="">(Ninguno)</option>
        </select>

        <script>
            document.getElementById("categoria").addEventListener("change", function () {
                const categoriaId = this.value;
                const equipoSelect = document.getElementById("equipo");
                equipoSelect.innerHTML = '<option value="">Cargando...</option>';

                fetch(`/equiposPorCategoria/${categoriaId}`)
                    .then(response => response.json())
                    .then(data => {
                        equipoSelect.innerHTML = '<option value="">(Ninguno)</option>';
                        data.forEach(equipo => {
                            const option = document.createElement("option");
                            option.value = equipo.id_equipo;
                            option.textContent = equipo.nombre;
                            equipoSelect.appendChild(option);
                        });
                    })
                    .catch(error => {
                        equipoSelect.innerHTML = '<option value="">Error al cargar</option>';
                        console.error("Error al cargar equipos:", error);
                    });
            });
        </script>


        <label for="fotoJugador">Subir Foto Del Jugador:</label>
        <input type="file" name="fotoJugador" id="fotoJugador" accept="image/*">

        <input type="submit" value="AGREGAR">
    </form>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(typeof alert !="undefined" ) { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %> ,
                timer: <%= timer %>
            }).then(() => {
                    window.location = '/<%= ruta %>'
                })
        </script>

        <% } %>

</body>

</html>