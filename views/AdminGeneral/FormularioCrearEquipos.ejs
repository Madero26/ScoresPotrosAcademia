<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Academia ITSON</title>
    <link rel="stylesheet" href="resources/styles/styleForms.css">
    <link rel="icon" href="resources/imgs/academia-logo.png">
</head>
<body>
    <%- include('../partials/adminNav', { usuario }) %>
    <h1 class="fotos">FORMULARIO CREAR EQUIPOS</h1>
    <form action="/crearEquipo" method="POST" enctype="multipart/form-data">
        <label for="categoria">Selecciona la Categor√≠a:</label>
        <select name="categoria" id="categoria" required>
            <% categorias.forEach(categoria => { %>
                <option value="<%= categoria.id_categoria %>"> <%= categoria.nombre_categoria %> </option>
                <% }); %>
        </select>
        <label for="name">Escriba el nombre:</label>
        <input name="nombre" type="text" placeholder="Potrillos, broncos, etc" required>
        <label for="color">Escriba el color representativo</label>
        <input name="color" type="text" placeholder="Rojo, Verde, Amarillos, etc" required>
        <label for="couch">Seleccione el Manager para este equipo</label>
        <select name="couch" id="couch" required>
            <% entrenadores.forEach(entrenador => { %>
                <option value="<%= entrenador.id_entrenador %>">  <%= entrenador.nombres %> </option>
                <% }); %>
        </select>
        <label for="fotoEquipo">Subir Foto del Equipo:</label>
        <input type="file" name="fotoEquipo" id="fotoEquipo" accept="image/*" required>
        <input type="submit" value="Subir">
    </form>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(typeof alert !="undefined" ) { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %> ,
                timer: <%= timer %>
            }).then(() => {
                    window.location = '/<%= ruta %>'
                })
        </script>

        <% } %>
</body>
</html>