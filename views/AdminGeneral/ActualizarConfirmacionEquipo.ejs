<!-- views/AdminGeneral/ActualizarConfirmacionEquipo.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Academia ITSON</title>
  <link rel="stylesheet" href="/resources/styles/styleMain.css">
  <link rel="stylesheet" href="/resources/styles/stylePago.css">
  <link rel="icon" href="/resources/imgs/academia-logo.png">
</head>
<body class="admin-bg">
  <% var isDelete = (typeof isDelete !== 'undefined') ? isDelete : false; %>

  <section class="content03">
    <div class="badge-title">
      <p><%= isDelete ? 'ELIMINAR EQUIPO' : 'ACTUALIZAR EQUIPO' %></p>
    </div>
  </section>

  <section class="login-body">
    <div class="login-container form-card">
      <form id="formEquipo"
            action="<%= isDelete ? ('/eliminarEquipo/' + equipo.id_equipo)
                                 : ('/actualizarEquipo/' + equipo.id_equipo) %>"
            method="POST" <%= isDelete ? '' : 'enctype="multipart/form-data"' %> >

        <div class="field">
          <label>Nombre del equipo:</label>
          <input type="text" name="nombre" value="<%= equipo.nombre %>"
                 <%= isDelete ? 'readonly class="readonly"' : 'required' %>>
        </div>

        <div class="field">
          <label>Colores:</label>
          <input type="text" name="colores" value="<%= equipo.colores %>"
                 <%= isDelete ? 'readonly class="readonly"' : 'required' %>>
        </div>

        <div class="grid-2">
          <div class="field">
            <label>Categoría:</label>
            <select id="catEdit" name="categoria" <%= isDelete ? 'disabled class="readonly"' : 'required' %>>
              <% categorias.forEach(c=>{ %>
                <option value="<%= c.id_categoria %>" <%= c.id_categoria===equipo.id_categoria ? 'selected':'' %>>
                  <%= c.nombre_categoria %>
                </option>
              <% }) %>
            </select>
          </div>
          <div class="field">
            <label>Entrenador (couch):</label>
            <select id="couchEdit" name="couch" <%= isDelete ? 'disabled class="readonly"' : '' %>>
              <option value="">— Sin entrenador —</option>
              <% entrenadores.forEach(en=>{ %>
                <option value="<%= en.id_entrenador %>" <%= en.id_entrenador===equipo.id_couch ? 'selected':'' %>>
                  <%= en.nombre %>
                </option>
              <% }) %>
            </select>
          </div>
        </div>

        <div class="field">
          <label>Foto actual:</label><br>
          <% if (equipo.url_foto) { %>
            <img class="preview" src="/<%= equipo.url_foto %>" alt="Foto del equipo" style="max-width:220px">
          <% } else { %>
            <p class="row-help">Este equipo no tiene foto.</p>
          <% } %>
        </div>

        <% if (!isDelete) { %>
          <div class="field">
            <label>Subir nueva foto (opcional):</label>
            <input type="file" name="fotoEquipo" accept="image/*">
          </div>
        <% } %>

        <div class="actions">
          <button type="submit" class="<%= isDelete ? 'btn-danger' : '' %>">
            <%= isDelete ? 'Eliminar' : 'Actualizar' %>
          </button>
          <a class="back-cta" href="<%= isDelete ? '/formEliminarEquipo' : '/formActualizarEquipo' %>">
            ⟵ Volver a selección
          </a>
        </div>
      </form>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    const form = document.getElementById('formEquipo');
    const isDelete = <%= JSON.stringify(isDelete) %>;

    // Confirm
    form.addEventListener('submit', function(e){
      e.preventDefault();
      Swal.fire({
        title: isDelete ? '¿Eliminar equipo?' : '¿Actualizar equipo?',
        text: isDelete ? 'Esta acción no se puede deshacer.'
                       : 'Se guardarán los cambios de «<%= equipo.nombre %>».',
        icon: isDelete ? 'warning' : 'question',
        showCancelButton:true,
        confirmButtonText: isDelete ? 'Sí, eliminar' : 'Sí, actualizar',
        cancelButtonText:'Cancelar',
        reverseButtons:true,
        focusCancel:true
      }).then(r=>{
        if(r.isConfirmed){
          Swal.fire({title:(isDelete?'Eliminando…':'Actualizando…'),
                     allowOutsideClick:false, allowEscapeKey:false,
                     didOpen:()=>Swal.showLoading()});
          form.submit();
        }
      });
    });

    // Sólo en actualizar: si cambian categoría, recarga entrenadores de esa categoría
    <% if (!isDelete) { %>
    const catEdit = document.getElementById('catEdit');
    const couchEdit = document.getElementById('couchEdit');
    catEdit.addEventListener('change', async (e)=>{
      couchEdit.innerHTML = '<option value="">Cargando…</option>';
      couchEdit.disabled = true;
      try{
        const r = await fetch(`/api/entrenadores?categoriaID=${encodeURIComponent(e.target.value)}`, {credentials:'same-origin'});
        const js = await r.json();
        if(!js.ok){ couchEdit.innerHTML = '<option value="">— Error —</option>'; return; }
        couchEdit.innerHTML = '<option value="">— Sin entrenador —</option>' +
          (js.data||[]).map(en => `<option value="${en.id_entrenador}">${en.nombre}</option>`).join('');
        couchEdit.disabled = false;
      }catch(err){
        console.error(err);
        couchEdit.innerHTML = '<option value="">— Error —</option>';
      }
    });
    <% } %>
  </script>
</body>
</html>

