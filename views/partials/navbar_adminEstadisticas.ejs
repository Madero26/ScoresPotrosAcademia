<section class="content01">
  <div class="regreso"><a href="/Login/logout">Cerrar sesión</a></div>
  <div class="perfil">
    <% if (usuario) { %><p> Estadísticas: <%= usuario.usuario %> </p><% } %>
  </div>
</section>

<nav>
  <img src="/resources/imgs/potros.png" alt="POTROS ITSON" />

  <!-- CREAR -->
  <div>
    <form>
      <select class="admin-select" onchange="redirigirStats(this)">
        <option>CREAR</option>
        <optgroup label="Bateo">
          <option value="/formCrearEstadisticasBateo">Registrar bateo</option>
        </optgroup>
        <optgroup label="Pitcheo">
          <option value="/formCrearEstadisticasPitcheo">Registrar pitcheo</option>
        </optgroup>
        <optgroup label="Equipo">
          <option value="/formCrearEstadisticasEquipo">Registrar estadísticas equipo</option>
        </optgroup>
        <optgroup label="Rendimiento">
          <option value="/formRegistrarRendimiento">Registrar rendimiento mensual</option>
        </optgroup>
      </select>
    </form>
  </div>

  <!-- ACTUALIZAR -->
  <div>
    <form>
      <select class="admin-select" onchange="redirigirStats(this)">
        <option>ACTUALIZAR</option>
        <optgroup label="Bateo">
          <option value="/formActualizarEstadisticasBateo">Actualizar bateo</option>
        </optgroup>
        <optgroup label="Pitcheo">
          <option value="/formActualizarEstadisticasPitcheo">Actualizar pitcheo</option>
        </optgroup>
        <optgroup label="Equipo">
          <option value="/formActualizarEstadisticasEquipo">Actualizar estadísticas equipo</option>
        </optgroup>
        <optgroup label="Rendimiento">
          <option value="/formActualizarRendimiento">Actualizar rendimiento mensual</option>
        </optgroup>
      </select>
    </form>
  </div>

  <!-- ELIMINAR -->
  <div>
    <form>
      <select class="admin-select" onchange="redirigirStats(this)">
        <option>ELIMINAR</option>
        <optgroup label="Bateo">
          <option value="/formEliminarEstadisticasBateo">Eliminar registro de bateo</option>
        </optgroup>
        <optgroup label="Pitcheo">
          <option value="/formEliminarEstadisticasPitcheo">Eliminar registro de pitcheo</option>
        </optgroup>
        <optgroup label="Equipo">
          <option value="/formEliminarEstadisticasEquipo">Eliminar registro de equipo</option>
        </optgroup>
        <optgroup label="Rendimiento">
          <option value="/formEliminarRendimiento">Eliminar medición de rendimiento</option>
        </optgroup>
      </select>
    </form>
  </div>

  <div><a href="/AdminContra" class="link">Cambiar contraseña</a></div>
  <img src="/resources/imgs/logo.png" alt="Logo" />
</nav>

<section class="content02"></section>

<script>
  if (!window.__statsNavInit) {
    window.__statsNavInit = true;
    window.redirigirStats = function (select) {
      const url = select.value;
      if (url && !/^(CREAR|ACTUALIZAR|ELIMINAR)$/.test(url)) {
        document.body.classList.add('fade-out');
        setTimeout(() => (location.href = url), 150);
      }
      setTimeout(() => (select.selectedIndex = 0), 250);
    };
  }
</script>
